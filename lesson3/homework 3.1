def absolut2(lst):
    if not lst:
        return [[], []]

    mid_index = (len(lst) + 1) // 2
    first_list = lst[:mid_index]
    second_list = lst[mid_index:]
    return [first_list, second_list]
print(absolut2([1, 2, 3, 4, 5, 6]))
print(absolut2([1,2,3]))
print(absolut2([1,2,3,4,5]))
print(absolut2([1]))
print(absolut2([]))